{{vot-star temasVotados=temasVotados}}

<div class="container w-650">

  <div class="title-container">

    <div class="center">
      <h4 class="title-label">Temario de la próxima Roots</h4>
      <div {{action "editarFecha" }}>
        {{#if editandoFecha}}
          {{tenpines/input-date label='Fecha' value=reunion.fecha}}
        {{else}}
          <h4 class="title-date">{{fechaDeReunion}}</h4>
        {{/if}}
      </div>
    </div>

    <div class="space-between">
      <div class="col s12 left-align flex-center" id="check-box">
        {{materialize/check-box class="size-16" label='Ver temas obligatorios' checked=mostrarObligatorios
                                checkboxClasses="filled-in"}}
        <i class="material-icons opacity-20">lock</i>
      </div>
      {{#unless estaCerrada}}
      <div class="flex-center pl-10" {{action 'mostrarFormulario'}}>
        <i class="material-icons primary-color clickable">add_circle</i>
        <h5 class="primary-color size-16 add-tema clickable">AGREGAR TEMA</h5>
      </div>
      {{/unless}}
    </div>

  </div>

  <div class="row">
    <table class="bordered highlight table">
      <tbody>
      {{#each reunion.temasPropuestos as |tema|}}
        {{#if (or mostrarObligatorios (not tema.esObligatorio))}}

          <tr bgcolor='white'>
            {{#if tema.esObligatorio}}
              <div class="the-lock lock-margin right clickable">
                <i class="material-icons opacity-20">lock</i>
                <span class="tool-tip-text">Tema obligatorio</span>
              </div>
            {{/if}}
            <div class="tema-horizontal-margin">
              <td class="noPadding">
                <h5 class="titulo-de-tema">{{tema.titulo}}</h5>
                {{#if expandido}}
                  <p class="crop" id="descripcion-expandida">
                    {{markdown-view value=tema.descripcion}}
                  </p>
                {{else}}
                  <p class="crop clickable" id="descripcion-no-expandida" {{action 'expandirDescripcion'}}>
                    {{markdown-view value=tema.descripcion}}
                  </p>
                {{/if}}
              </td>

              {{#if expandido}}
                <div id="tema-colapse-button">
                  <button class="colapse-button" onclick={{action 'colapsarDescripcion'}}>
                    <i class="material-icons">unfold_less</i>
                  </button>
                </div>
              {{/if}}
            </div>

            <div class="divider"></div>

            <div class="space-between m-5">

              <div class="flex-center tema-bottom">
                <h6 class="size-16 m-10 opacity-35">#{{tema.id}}</h6>
                <i class="material-icons opacity-70">person</i>
                <h6 class="opacity-70 m-10">{{tema.autor}}</h6>
                <i class="material-icons m-5">access_time</i>
                <label class={{tema.colorDuracion }}>{{tema.duracion}}</label>
              </div>

              <div class="flex-center m-10">

                {{#unless estaCerrada}}
                  {{#unless tema.esObligatorio}}

                    <button type="button" id="agregar-button" {{action 'sumarVoto' tema}} class="btn-flat bold btn"
                            disabled={{votarDisabled}}>

                      <div class="flex-center">
                        {{#repetir-pedazo class="flex-center" veces=tema.cantidadVotosPropios}}
                          <i class="material-icons yellow-text height-inherit {{votosOpacity}}">star</i>
                        {{/repetir-pedazo}}

                        <h6 class="bold">
                          {{#if tema.tieneVotos}}
                            VOTAR DE NUEVO
                          {{else}}
                            VOTAR
                          {{/if}}
                        </h6>
                      </div>

                    </button>

                    {{#if tema.tieneVotos}}
                      <button class="btn noPadding w-46 noHover ml-5" id="quitar-button" {{action 'restarVoto' tema}}
                              disabled={{votarDisabled}}>
                        <i class="material-icons primary-color menus-button" id="quitar-icon">
                          indeterminate_check_box</i>
                      </button>

                    {{/if}}
                  {{/unless}}

                  <div id="edit-menu">
                    {{#tenpines/drop-down icon='more_vert' removeBtn=true }}
                      <li class="light-grey" {{action 'mostrarFormularioDeEdicion' tema}}>
                        <a class="black-text">Editar</a></li>
                      <li class="divider"></li>
                      <li class="light-grey"><a class="black-text" {{action 'borrarTemaElegido' tema}}>Eliminar</a></li>
                    {{/tenpines/drop-down }}
                  </div>

                {{/unless}}

              </div>
            </div>
          </tr>

        {{/if}}
      {{/each}}
      </tbody>
    </table>
  </div>

  {{#unless estaCerrada}}
    {{#if visibilidadCardDeTema}}
      <div class="modal-background" {{action 'cerrarEditorDeTemaNuevo'}}>
      </div>
      <div id="myModal" class="modal-tema">
        {{#if mostrandoFormularioDeEdicion}}
          {{editor-de-tema titulo='Modificar Propuesta' tema=temaAEditar nombreDeDuraciones=nombreDeDuraciones
                           duraciones=duraciones cerrarEditor=(action 'cerrarEditorDeTema')
                           alGuardar=(action 'updatearTema')  esObligatorio=esObligatorio
                           seleccionarDuracion=(action 'seleccionarDuracion') classNames='col s11'}}
        {{/if}}
        {{#if mostrandoFormularioXTemaNuevo}}
          {{editor-de-tema titulo='Nueva Propuesta' tema=nuevoTema nombreDeDuraciones=nombreDeDuraciones
                           duraciones=duraciones cerrarEditor=(action 'cerrarEditorDeTemaNuevo')
                           alGuardar=(action 'agregarTema')  esObligatorio=esObligatorio
                           seleccionarDuracion=(action 'seleccionarDuracion') classNames='col s11'}}
        {{/if}}
      </div>
    {{/if}}
  {{/unless}}

</div>

{{tenpines/modal-de-confirmacion
  open=modalDeBorradoAbierto
  titulo='Confirmar eliminacion de tema'
  descripcion=mensajeDeConfirmacionDeBorrado
  accionAceptar=(action 'borrarTemaElegido')
}}
{{tenpines/modal-de-confirmacion
  open=modalDeCambioDeObligatoriedadAbierto
  titulo='Cambiando a tema no obligatorio'
  descripcion="Se perderán todos los votos del tema"
  accionAceptar=(action 'updatearTemaConfirmado')
}}


{{#if puedeCerrar}}

  <div class="finish-content">
    <div class="center w-650 align-left">
          <span class="flex-center finish-title">
            <i class="material-icons mr-5">info_outline</i>
            Cerrar Temario para todes
          </span>
      <p class="mt-0">Una vez votados todos los temas y antes de comenzar la reunión, debemos cerrar el
        temario. Al cerrar el
        temario, todos los temas se ordenarán desde el primero más votado por todos los pinos, y <b>nadie mas podrá
          seguir votando</b>
      </p>

      {{#unless estaCerrada}}
        <button type="button" {{action 'pedirConfirmacionDeCierre'}} class="btn-flat bold btn">
          <h6>Terminar votacion</h6>
        </button>
      {{/unless}}

      {{#if estaCerrada}}
        <button type="button" {{action 'reabrirVotacion'}} class="btn-flat bold btn">
          <h6>Reabrir votacion</h6>
        </button>

      {{/if}}

    </div>

    {{tenpines/modal-de-confirmacion
      open=modalDeCierreAbierto
      titulo='Confirmar cierre de votación'
      descripcion='¿Estás seguro que querés cerrar la votación, que comience la reunión y que nadie más pueda seguir votando?'
      accionAceptar=(action 'cerrarVotacion')
    }}
  </div>
{{/if}}
