<div class="reuniones-list">
  <div class="reuniones-list__listado">
    <h4 class="reuniones-list__listado__title"> Todas las reuniones </h4>
    {{#tenpines/object-table titulos='Fecha, Temas, Status' col=anchoDeTabla bordered=true highlight=true }}
    {{#tenpines/object-table titulos='Fecha, Temas' bordered=true}}
      {{#each model as |reunion|}}
        <tr {{action 'verReunion' reunion}}>
          <td>{{reunion.fechaFormateada}}</td>
          <td>{{reunion.temasPropuestos.length}}</td>
          <td>
            {{#if (eq reunion.status 'CON_MINUTA')}}
              <a class="btn-floating waves-effect waves-light white right m-5"  {{action ''}}><i
                class="material-icons black-text">speaker_notes</i></a>
            {{/if}}
            {{#if (eq reunion.status 'CERRADA')}}
              <a class="btn-floating waves-effect waves-light pink right m-5"  {{action ''}}><i
                class="material-icons">speaker_notes_off</i></a>
            {{/if}}
          </td>
        </tr>
      {{/each}}
    {{/tenpines/object-table}}
    <a class="reuniones-list__listado__button btn" {{action 'crearReunion'}}>AGREGAR ROOT EXTRAORDINARIA</a>
  </div>
  <div class="reuniones-list__detalle">
      {{detalle-de-reunion
        reunionSeleccionada=reunionSeleccionada
        reunionCerrada=reunionCerrada
      }}

    {{#if mostrandoMinuta}}
      {{mostrador-de-minuta cerrarMinuta=(action 'cerrarMinuta') minuta=minuta}}
    {{/if}}
  </div>
</div>



