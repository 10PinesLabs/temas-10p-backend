<div class="card">

  <div class="detalle-reunion__header">
    <div class="detalle-reunion__header__title"> Root del {{reunionSeleccionada.fechaFormateada}} </div>

    <div class="detalle-reunion__header__seccion-botones">
      {{#link-to 'minuta.ver' reunionSeleccionada.id}}
        <a class="detalle-reunion__header__seccion-botones__primary-button btn purple">
          <i class="material-icons">speaker_notes</i>VER MINUTA</a>
      {{/link-to}}

      <a class="btn-floating transparent right m-5"  {{action ''}}>
        <i class="material-icons black-text">more_vert</i>
      </a>
    </div>
  </div>
  <div class="detalle-reunion__body card-content">
    {{#if reunionCerrada}}
      <div class="detalle-reunion__body__marcador">
        <div class="purple-text">- - - -</div>
        <div>Temas que entran en 3 horas</div>
      </div>
    {{/if}}
    <div class="detalle-reunion__body__table">
      {{#tenpines/object-table titulos=tableTitles col='s12' responsive=true}}
        {{#each reunionSeleccionada.temasPropuestos as |tema|}}
          {{tema-en-tabla
            reunionCerrada=reunionCerrada
            tema=tema
            ultimoTema=ultimoTemaQueEntra
            duraciones=duraciones}}
        {{/each}}
      {{/tenpines/object-table}}
    </div>
  </div>
  <div class="card-footer">
    <img src="/reunion.svg"/>
  </div>
</div>

