<div class="modal-background" {{action 'cerrarEditorDeTemaNuevo'}}></div>
<div id="myModal" class="modal-tema">
  <div class="card">
    <a class="btn-floating waves-effect waves-light btn right close-button-margin"  {{action manejarCerrar}}><i
        class="material-icons ">close</i></a>
    <div class="card-content">
      <span class="card-title">{{titulo}}</span>

      <div class="row">
        {{yield}}
      </div>

      <div class="card-action right-align">
        <button type="button" onclick={{action manejarGuardar}}
                class="btn-flat btn bold btn-guardar--focus {{unless guardarHabilitado "disabled"}}">
          <h6 class="bold">Guardar</h6>
        </button>
      </div>
    </div>
  </div>
</div>