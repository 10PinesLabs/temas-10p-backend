<div class="row">
  <div class="col s12">
    <h5>Asistentes a la reunión</h5>
  </div>
</div>

<div class="row">
  <div class="col s12">
    {{#power-select-multiple
      options=usuariosSeleccionables
      selected=usuariosSeleccionados
      searchField="name"
      placeholder="Seleccione los asistentes a la reunión"
      noMatchesMessage="No more pinos"
      onchange=(action (mut usuariosSeleccionados))
    as |usuario|
    }}
      {{usuario.name}}
    {{/power-select-multiple}}
  </div>
</div>

<div class="row">
  <div class="con-padding">
    {{#link-to 'minuta.ver' reunionId}}
      {{tenpines/material-button class="right" label='Ver minuta'}}
    {{/link-to}}
  </div>

  {{#tenpines/object-table titulos='Prioridad, Tema, Autor, Duración, Obligatoriedad ' col=anchoDeTabla bordered=true highlight=true }}

    {{#each  minuta.temas as |temaDeMinuta|}}
      <tr  {{action 'verEditorDeConclusion' temaDeMinuta}} >
        <td>{{temaDeMinuta.tema.prioridad}}</td>
        <td>{{temaDeMinuta.tema.titulo}}</td>
        <td>{{temaDeMinuta.tema.autor}}</td>
        <td>{{temaDeMinuta.tema.duracion}}</td>
        <td>{{temaDeMinuta.tema.obligatoriedad}}</td>
        {{tema-de-minuta-conclusion-checked usuarios=usuarios temaDeMinuta=temaDeMinuta}}
      </tr>
    {{/each}}
  {{/tenpines/object-table}}

  {{# if mostrandoEditor}}
    {{editor-de-conclusion
      alGuardar=(action 'guardarConclusion')
      alCerrar=(action 'cerrarEditor')
      temaDeMinuta=temaAEditar
      usuarios=model.usuarios
    }}
  {{/if}}

</div>

<div class="card-action right-align">
  <a class="waves-effect waves-light btn" onclick={{action 'guardarUsuariosSeleccionadosYContinuar'}} >Siguiente:
    Conclusiones</a>
</div>